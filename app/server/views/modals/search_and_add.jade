.modal-search_and_add.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        button.close(data-dismiss='modal') x
        h4.modal-title=title
      .modal-body
        form#search_form
          .input-group
            input#search_input.form-control(placeholder=placeholder,type="text")
            span.input-group-btn
              button.btn.btn-default(type="submit")=__("SEARCH")
          #search_result
          #invite
      .modal-footer
        button(data-dismiss="modal").cancel.btn.btn-primary=__("Done")

extends ../layout
block content
	.tabbable.tabs-left.row
		include ../comp/cp_menu
		.tab-content.col-md-10
			.tab-pane.active
				legend.clearfix
					.pull-left=title
					button.btn.btn-primary.pull-right(type="button",onclick="$('#playerPreview').hide();$('#file-uploader').show();return false")=__("Create a new performance")
				.row.main-list
					- for(var a=0;a<result.length;a++)
						- var box = result[a]
						- var boxpath = "controlpanel"
						include ../comp/box_performances

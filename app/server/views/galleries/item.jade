mixin gallery_item_content
  a(href="/#{box.users[0].permalink}/galleries/#{box.permalink}/", title=box.title)
    .image_box.wrapper_item
      img.main_performance_image(alt=__("Thumbnail of") + ": " + box.title, src=_h.media.getFileFormat(box.file.file, config.sections[section].thumbnails.list))
      .footage_stats.box_stats.overlay_wrapper_top
        ul.list-inline
          li
            i(class="fa fa-picture-o")
            span= box.stats.img
          li
            // MISSING DATA: NUMBER OF VIDEO
            i(class="fa fa-video-camera")
            span= box.stats.video
          li
            i(class="fa fa-eye")
            span= box.stats.visits
      .title_and_info_container.overlay_wrapper
        h3= box.title
        ul.list-inline.box_other_infos
          li
            i(class="fa fa-caret-right")
            // MISSING DATA: TYPOLOGY
            span typology
          li
            i(class="fa fa-map-marker")
            // MISSING DATA: TYPOLOGY
            span= "location "
            span= "city "
            span country

if (col_number)
  div.list_item_performer.grid-item.gallery_footage(class= col_number)
    +gallery_item_content
else
  div.list_item_performer.grid-item.col-sm-3(class="col-md-3 gallery_footage")
    +gallery_item_content